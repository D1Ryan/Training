                    <img id="imgQr" width="100" height="100" src="@Model.QrCodeUrl" />
                </div>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Summary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Summary)
            </dd>

            <dt>
                启用状态
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Is_Enable)
            </dd>

