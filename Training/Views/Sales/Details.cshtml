            <dt>
                @Html.DisplayNameFor(model => model.Mail)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mail)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Private_Code)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Private_Code)
            </dd>

            <dt>
                二维码
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QrCode)
